<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/yumyumlogo2"
            android:transitionName="logo_image"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:src="@drawable/shipper"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="10dp"
            />


    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập để tiếp tục"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:background="@drawable/custom_input"
                app:endIconMode="clear_text"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="#FFC107"
                >


                <EditText
                    android:id="@+id/edtUser"
                    android:layout_width="400dp"
                    android:layout_height="52dp"
                    android:hint="Tên đăng nhập"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="12dp"
                    android:drawableTint="#818085"
                    android:paddingStart="12dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxStrokeColor="#FFC107"
                app:endIconMode="password_toggle"
                >

                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="400dp"
                    android:layout_height="52dp"
                    android:hint="Mật khẩu"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="12dp"
                    android:drawableTint="#818085"
                    android:paddingStart="12dp"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/btnLogin"
                android:layout_marginTop="10dp"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:text="ĐĂNG NHẬP"
                android:background="#DDD7D7"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#6A6868"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5E3EA6"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5E3EA6"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOẶC"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_line"
            android:drawableStart="@drawable/facebook"
            android:paddingStart="10dp"
            android:text="Tiếp tục với Facebook"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_line"
            android:drawableStart="@drawable/google"
            android:paddingStart="10dp"
            android:text="Tiếp tục với Google"
            android:textColor="@color/black"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bản quyền thuộc về © Nguyễn Thanh Hoàng"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        />

</LinearLayout>